{
  "ConnectionStrings": {
    // "AuthDatabase": "Server=mssql;Database=TechMart_Auth;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=true;MultipleActiveResultSets=true",
    "AuthDatabase": "Server=localhost;Database=TechMart_Auth;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=true;MultipleActiveResultSets=true",
    // "Redis": "redis:6379",
    "Redis": "localhost:6379",
    // "Kafka": "kafka:9092"
    "Kafka": "localhost:9092"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-that-is-at-least-32-characters-long",
    "Issuer": "TechMart.Auth",
    "Audience": "TechMart.API",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "Algorithm": "HS256",
    "ValidateAudience": true,
    "ValidateIssuer": true,
    "ValidateLifetime": true,
    "ClockSkewSeconds": 30
  },
  "BCryptSettings": {
    "WorkFactor": 12
  },
  "EmailSettings": {
    "ApiKey": "your-email-provider-api-key-or-password",
    "FromEmail": "noreply@techmart.com",
    "FromName": "TechMart",
    "BaseUrl": "https://techmart.com",
    "EnableEmailSending": true
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/techmart-auth-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 10485760,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "TechMart.Auth.API"
    }
  },
  "RateLimit": {
    "EnableGlobalRateLimit": true,
    "DefaultWindow": "00:15:00",
    "DefaultMaxAttempts": 100,
    "ExcludedPaths": ["/health", "/swagger", "/swagger-ui", "/metrics"],
    "Rules": [
      {
        "Name": "LoginAttempts",
        "Paths": ["/api/v1/auth/login"],
        "Methods": ["POST"],
        "IdentifierType": "Email",
        "MaxAttempts": 5,
        "Window": "00:15:00",
        "IncrementPolicy": "OnClientError",
        "Message": "Too many login attempts. Please wait 15 minutes.",
        "Enabled": true
      },
      {
        "Name": "Registration",
        "Paths": ["/api/v1/auth/register"],
        "Methods": ["POST"],
        "IdentifierType": "IpAddress",
        "MaxAttempts": 3,
        "Window": "01:00:00",
        "IncrementPolicy": "Always",
        "Message": "Too many registration attempts from this IP.",
        "Enabled": true
      },
      {
        "Name": "PasswordReset",
        "Paths": ["/api/v1/auth/forgot-password"],
        "Methods": ["POST"],
        "IdentifierType": "Email",
        "MaxAttempts": 3,
        "Window": "01:00:00",
        "IncrementPolicy": "Always",
        "Message": "Too many password reset requests.",
        "Enabled": true
      },
      {
        "Name": "ApiGeneral",
        "Paths": ["/api/"],
        "Methods": ["*"],
        "IdentifierType": "User",
        "MaxAttempts": 1000,
        "Window": "01:00:00",
        "IncrementPolicy": "Always",
        "Message": "API rate limit exceeded.",
        "Enabled": true
      }
    ]
  },
  "AllowedHosts": "*"
}
